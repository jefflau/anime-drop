.open-genres
  display none
  background $light-blue
  color white
  padding 10px 20px
  +below($width-s)
    display block
    margin-bottom 20px

  &:hover
    cursor pointer


.genres-list
  display flex
  flex-wrap wrap
  margin 0 15px
  overflow hidden
  transition 0.2s max-height

  +below($width-s)
    max-height 0

    &.open
      max-height 999px
      transition 0.2s all


  li
    background white
    color #aaa
    border 1px solid #ccc
    list-style none
    text-align center
    padding 5px
    width calc(12.5% - 10px)
    border-radius 5px
    margin 0 5px 10px

    +below($width-m)
      width calc(16.6666% - 10px)

    +below($width-s)
      width calc(25% - 10px)

    +below($width-s)
      width calc(33.33% - 10px)

    &:hover
      cursor pointer

    &.current
      color white
      background $blue
      border 1px solid $blue


.anime-container
  container()
  padding 0 10px 0
  display flex
  flex-wrap wrap

.anime-item
  list-style none
  background white
  border-radius 3px
  position relative
  width calc(25% - 20px)
  height 0
  overflow hidden
  padding-bottom 30%
  margin 0 10px 20px

  +below($width-s)
    width calc(33.333% - 20px)
    padding-bottom 38%

  +below($width-xs)
    width calc(50% - 20px)
    padding-bottom 60%

  > div
    height 100%
    width 100%

  a
    display block
    float left

  .overlay
    position absolute
    bottom 0
    left 0
    height 100%
    width 100%

  img
    display block
    width 100%

  h3
    font-family Varela Round
    position absolute
    top 10%
    left 0
    padding-left 20px
    color white

    +below($width-s)
      font-size 14px

    &:before
      background rgba(135,206,250,1)
      height 100%
      content ""
      padding 0 10px
      padding-bottom 0
      padding-left 0
      position absolute
      top 0
      left 0

    &:after
      background rgba(0,0,0,0.7)
      content ""
      height 100%
      padding 0 10px
      padding-bottom 0
      padding-left 0
      position absolute
      top 0
      left 10px

    span
      white-space pre-wrap
      background rgba(0,0,0,0.7)
      padding 8px
      padding-left 0
      line-height 2.3em

  .score
    color white
    font-family Varela Round
    border-top skyblue 3px solid
    border-left skyblue 3px solid
    background black
    position absolute
    right 0
    bottom 0
    padding 10px
    font-size 20px
